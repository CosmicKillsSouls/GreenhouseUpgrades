{
    "Format": "2.7.0",
    "ConfigSchema": {
        "BuildExtraGreenhouses": {
            "Default": "false",
            "AllowValues": "true, false",
            "Description": "{{i18n: config.BuildExtraGreenhouses.description}}"
        },
        "SectionedPlots": {
            "Default": "true",
            "AllowValues": "true, false",
            "Description": "{{i18n: config.SectionedPlots.description}}"
        },
        "IncludedTreeArea": {
            "Default": "true",
            "AllowValues": "true, false",
            "Description": "{{i18n: config.IncludedTreeArea.description}}"
        },
        "SmallerInterior": {
            "Default": "false",
            "AllowValues": "true, false",
            "Description": "{{i18n: config.SmallerInterior.description}}"
        }
    },
    "Changes": [
        {
            "Action": "Include",
            "FromFile": "Buildings.json",
            "When": {
                "SmallerInterior": false
            }
        },
        {
            "Action": "Include",
            "FromFile": "SmallerBuildings.json",
            "When": {
                "SmallerInterior": true
            }
        },
        {
            "Action": "EditImage",
            "Target": "Buildings/Greenhouse",
            "FromFile": "assets/GreenhouseShadow.png",
            "FromArea": {
                "X": 0,
                "Y": 0,
                "Width": 127,
                "Height": 132
            },
            "ToArea": {
                "X": 112,
                "Y": 144,
                "Width": 127,
                "Height": 132
            }
        },
        {
            "Action": "Load",
            "Target": "Maps/BaseGreenhouse",
            "FromFile": "assets/BaseGreenhouse.tmx"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade1",
            "FromFile": "assets/GreenhouseUpgrade1.tmx"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade2",
            "FromFile": "assets/GreenhouseUpgrade2.tmx",
            "When": {
                "SmallerInterior": false
            }
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade2",
            "FromFile": "assets/SmallerGreenhouseUpgrade2.tmx",
            "When": {
                "SmallerInterior": true
            },
            "Priority": "High"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade3",
            "FromFile": "assets/GreenhouseUpgrade3.tmx",
            "Priority": "Low",
            "When": {
                "SmallerInterior": false
            }
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade3",
            "FromFile": "assets/GreenhouseUpgrade3Large.tmx",
            "When": {
                "SectionedPlots": false,
                "SmallerInterior": false
            },
            "Priority": "High"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade3",
            "FromFile": "assets/SmallerGreenhouseUpgrade3.tmx",
            "When": {
                "SmallerInterior": true
            },
            "Priority": "High"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade5",
            "FromFile": "assets/GreenhouseUpgrade5.tmx",
            "Priority": "Low",
            "When": {
                "SmallerInterior": false
            }
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade5",
            "FromFile": "assets/GreenhouseUpgrade5Large.tmx",
            "When": {
                "SectionedPlots": false,
                "SmallerInterior": false
            },
            "Priority": "High"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade5",
            "FromFile": "assets/SmallerGreenhouseUpgrade5.tmx",
            "When": {
                "SmallerInterior": true
            },
            "Priority": "High"
        }
    ]
}