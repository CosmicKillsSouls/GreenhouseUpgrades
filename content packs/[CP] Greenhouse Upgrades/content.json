{
    "Format": "2.7.0",
    "ConfigSchema": {
        "BuildExtraGreenhouses": {
            "Default": "false",
            "AllowValues": "true, false",
            "Description": "{{i18n: config.BuildExtraGreenhouses.description}}"
        },
        "SectionedPlots": {
            "Default": "true",
            "AllowValues": "true, false",
            "Description": "{{i18n: config.SectionedPlots.description}}"
        },
        "IncludedTreeArea": {
            "Default": "true",
            "AllowValues": "true, false",
            "Description": "{{i18n: config.IncludedTreeArea.description}}"
        },
        "SmallerInterrior": {
            "Default": "false",
            "AllowValues": "true, false",
            "Description": "{{i18n: config.SmallerInterrior.description}}"
        }
    },
    "Changes": [
        {
            "Action": "Include",
            "FromFile": "Buildings.json"
        },
        {
            "Action": "Include",
            "FromFile": "SmallerBuildings.json",
            "When": {
                "SmallerInterrior": true
            }
        },
        {
            "Action": "Load",
            "Target": "Buildings/GreenhouseUpgrades.Greenhouse",
            "FromFile": "assets/Greenhouse.png"
        },
        {
            "Action": "Load",
            "Target": "Maps/BaseGreenhouse",
            "FromFile": "assets/BaseGreenhouse.tmx"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade1",
            "FromFile": "assets/GreenhouseUpgrade1.tmx"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade2",
            "FromFile": "assets/GreenhouseUpgrade2.tmx"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade3",
            "FromFile": "assets/GreenhouseUpgrade3.tmx",
            "Priority": "Low"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade3",
            "FromFile": "assets/GreenhouseUpgrade3Large.tmx",
            "When": {
                "SectionedPlots": false,
                "SmallerInterrior": false
            },
            "Priority": "High"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade5",
            "FromFile": "assets/GreenhouseUpgrade5.tmx",
            "Priority": "Low"
        },
        {
            "Action": "Load",
            "Target": "Maps/GreenhouseUpgrade5",
            "FromFile": "assets/GreenhouseUpgrade5Large.tmx",
            "When": {
                "SectionedPlots": false,
                "SmallerInterrior": false
            },
            "Priority": "High"
        }
    ]
}